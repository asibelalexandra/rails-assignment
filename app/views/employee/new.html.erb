<% provide(:title, 'Add Employee') %>
<h1>Add new employee</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @employee, url: employee_index_path, method: :post, local: true do |f| %>
      <% if @employee && @employee&.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@employee.errors.count, "error") %>.
          </div>
          <ul>
            <% @employee.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :first_name, "First Name"%>
      <%= f.text_field :first_name %>
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>
      <%= f.label :employer_id, "Employer" %>
      <%= f.select :employer_id, options_from_collection_for_select(Employer.all, :id, :employer_name) %>
      <%= f.submit "Add employee", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
