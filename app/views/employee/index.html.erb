<% provide(:title, 'Employees') %>
<h1>Employees</h1>

<div class="row">
  <div class="col-sm-2">
    <div class="btn-group">
      <%= link_to "Add Employee", new_employee_path, method: :get, class: "btn btn-primary"%>
    </div>
  </div>
  <div class="col-sm-10">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Employer</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.id %></td>
            <td><%= employee.full_name %></td>
            <td><%= employee.employer.employer_name %></td>
            <td><%= link_to "Show Employee", employee_path(employee.id), method: :get, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @employees.blank? %>
      <p>There are no employees currently.</p>
    <% end %>
  </div>
</div>