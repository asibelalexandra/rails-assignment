<% provide(:title, 'Add Employer') %>
<h1>Add new employer</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @employer, url: employer_index_path, method: :post, local: true do |f| %>
      <% if @employer && @employer&.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@employer.errors.count, "error") %>.
          </div>
          <ul>
            <% @employer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :employer_name, "Employer Name" %>
      <%= f.text_field :employer_name %>
      <%= f.submit "Add employer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
