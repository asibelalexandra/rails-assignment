<% provide(:title, 'Employers') %>
<h1>Employers</h1>

<div class="row">
  <div class="col-sm-2">
    <div class="btn-group">
      <%= link_to "Add Employer", new_employer_path, method: :get, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-sm-10">
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Employer Name</th>
      </tr>
      </thead>
      <tbody>
      <% @employers.each do |employer| %>
        <tr>
          <td><%= employer.id %></td>
          <td><%= employer.employer_name %></td>
          <td><%= link_to "Show Employer", employer_path(employer.id), method: :get, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% if @employers.blank? %>
      <p>There are no employers currently.</p>
    <% end %>
  </div>
</div>