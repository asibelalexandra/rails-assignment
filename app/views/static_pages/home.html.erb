<% provide(:title, 'Home') %>
<h1>Dashboard</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Latest Employees</h3></div>
        <div class="panel-body">
          <table class="table">
            <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Employer</th>
            </tr>
            </thead>
            <tbody>
            <% @latest_employees.each do |employee| %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= employee.full_name %></td>
                <td><%= employee.employer.employer_name %></td>
                <% if logged_in? %>
                  <td><%= link_to "Show Employee", employee_path(employee.id), method: :get, class: "btn btn-primary" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% if @latest_employees.blank? %>
            <p>There are no employees currently.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Latest Employers</h3></div>
        <div class="panel-body">
          <table class="table">
            <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Employer Name</th>
            </tr>
            </thead>
            <tbody>
            <% @latest_employers.each do |employer| %>
              <tr>
                <td><%= employer.id %></td>
                <td><%= employer.employer_name %></td>
                <% if logged_in? %>
                  <td><%= link_to "Show Employer", employer_path(employer.id), method: :get, class: "btn btn-primary" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% if @latest_employers.blank? %>
            <p>There are no employers currently.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Latest Budgets</h3></div>
        <div class="panel-body">
          <table class="table">
            <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Budget Hours</th>
              <th scope="col">Budget Start Date</th>
              <th scope="col">Budget End Date</th>
              <th scope="col">Budget Employer</th>
            </tr>
            </thead>
            <tbody>
            <% @latest_budgets.each do |budget| %>
              <tr>
                <td><%= budget.id %></td>
                <td><%= budget.hours %></td>
                <td><%= budget.start_date %></td>
                <td><%= budget.end_date %></td>
                <td><%= budget.employer.employer_name %></td>
                <% if logged_in? %>
                  <td><%= link_to "Show Bugdet", budget_path(budget.id), method: :get, class: "btn btn-primary" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% if @latest_budgets.blank? %>
            <p>There are no budgets currently.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Latest Timesheets</h3></div>
        <div class="panel-body">
          <table class="table">
            <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Timesheet Hours</th>
              <th scope="col">Timesheet Date of Service</th>
              <th scope="col">Timesheet Budget</th>
              <th scope="col">Timesheet Employee</th>
            </tr>
            </thead>
            <tbody>
            <% @latest_timesheets.each do |timesheet| %>
              <tr>
                <td><%= timesheet.id %></td>
                <td><%= timesheet.hours %></td>
                <td><%= timesheet.date_of_service %></td>
                <td><%= timesheet.budget.id %></td>
                <td><%= timesheet.employee.full_name %></td>
                <% if logged_in? %>
                  <td> <%= link_to "Show Timesheet", timesheet_path(timesheet.id), method: :get, class: "btn btn-primary" %></td>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% if @latest_timesheets.blank? %>
            <p>There are no timesheets currently.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
