<% provide(:title, 'Budgets') %>
<h1>Budgets</h1>

<div class="row">
  <div class="col-sm-2">
    <div class="btn-group">
      <%= link_to "Add Budget", new_budget_path, method: :get, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-sm-10">
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Budget Name</th>
        <th scope="col">Budget Hours</th>
        <th scope="col">Budget Start Date</th>
        <th scope="col">Budget End Date</th>
        <th scope="col">Budget Employer</th>
      </tr>
      </thead>
      <tbody>
      <% @budgets.each do |budget| %>
        <tr>
          <td><%= budget.id %></td>
          <td><%= budget.budget_name %></td>
          <td><%= budget.hours %></td>
          <td><%= budget.start_date %></td>
          <td><%= budget.end_date %></td>
          <td><%= budget.employer.employer_name %></td>
          <td><%= link_to "Show Bugdet", budget_path(budget.id), method: :get, class: "btn btn-primary" %></td>
          <td><%= link_to "Edit Bugdet", edit_budget_path(budget.id), method: :get, class: "btn btn-primary" %></td>
          <td><%= link_to "Delete Bugdet", budget_path(budget.id), method: :delete, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% if @budgets.blank? %>
      <p>There are no budgets currently.</p>
    <% end %>
  </div>
</div>